<%- include('partials/header'); %>
<%- include('partials/navbar'); %>

<!-- Banner -->
<header class="banner bg-body-tertiary">
    <div class="container pt-4 pb-4">
        <h1 class="mb-2">Artigos de luxo para piscinas olimpicas</h1>
        <h2 class="fs-4">Quais itens comprar para a sua piscina olimpica</h2>
    </div>
</header>

<!-- Content -->
<div class="container mt-5 mb-5">
    <div class="row">
        <nav class="col col-12 col-md-3 mb-4">
            <h3 class="text-center mb-4">Categorias</h3>
            <ul class="list-group">
                <% categories.forEach(categori => { %>
                    <li class="list-group-item">
                        <a href="#" class="link-primary link-underline-opacity-25 link-underline-opacity-100-hover stretched-link"><%= categori.title %><span class="badge text-bg-secondary ms-2"><%= categori.articles.length %></span></a>
                    </li>
                <% }) %>
            </ul>
        </nav>
        <div class="col col-md-1"></div>
        <main class="col col-12 col-md-8">

            <% articles.forEach(article => { %>
                <div class="card mb-4">
                    <img src="<%= article.img %>" class="card-img-top" alt="..." style="max-height: 350px;">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text"><%= article.abstract %></p>
                        <a href="/<%= article.slug %>" class="btn btn-primary stretched-link">Ler mais</a>
                    </div>
                </div>
            <% }) %>

        </main>
    </div>
</div>

<%- include('partials/footer'); %>
